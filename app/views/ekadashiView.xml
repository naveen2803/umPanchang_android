<Alloy>
	<Window class="container" title="Ekadashi" id="winEkadashi">
		<ActionBar id="actionBar" title="Ekadashi" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
		<ListView id="elist" defaultItemTemplate="template1" separatorColor="#Ffcf5b" onItemclick="itemClickHandler" >
			<Templates>
				<ItemTemplate name="template1">
					<View height="Ti.UI.SIZE">
						<Label id="lblDate" bindId="lblDate" top="10" right="10"/>
						<Label id="lblName" bindId="lblName" top="10" left="10" right="85" bottom="10"/>
						<Label id="lblOptionsArrow" text="&#xf05a;"/>
					</View>
				</ItemTemplate>
			</Templates>
			
			<SearchBar id="sBar" barColor="#FDFBE6" hintText="Search Ekadashi" softKeyboardOnFocus="Titanium.UI.Android.SOFT_KEYBOARD_HIDE_ON_FOCUS" onClick="addKeyboard" />
		</ListView>
		
		<OptionDialog id="dialog" onClick="onOptionSelect">
            <Options>
                <Option>Add to calendar</Option>
            </Options>
    	</OptionDialog>
	</Window>
</Alloy>